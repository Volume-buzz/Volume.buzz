# Next.js Dashboard Environment Variables

# Core Application
APP_URL=http://localhost:3001
NODE_ENV=development
JWT_SECRET=change_me_use_long_random

# Discord OAuth (shared with backend)
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_REDIRECT_URI=http://localhost:3001/api/auth/callback/discord

# Spotify OAuth (PKCE Flow)
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
# Client ID for client-side token refresh
NEXT_PUBLIC_SPOTIFY_CLIENT_ID=

# Database (shared with backend)
DATABASE_URL=postgresql://user:password@localhost:5432/volume

# Backend API base URL used by the Next app
NEXT_PUBLIC_API_BASE=http://localhost:3000

# Logging Configuration
LOG_LEVEL=debug

# Sentry Error Monitoring (Dashboard)
# Get your DSN from: https://sentry.io/settings/projects/your-project/keys/
SENTRY_DSN=https://your-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-dsn@sentry.io/project-id
SENTRY_ORG=your-org-name
SENTRY_PROJECT=your-project-name
SENTRY_AUTH_TOKEN=your-auth-token
