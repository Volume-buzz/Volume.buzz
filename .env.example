# Discord Bot Backend Environment Variables

# Core Application
NODE_ENV=development
PORT=3000
ALLOWED_ORIGINS=http://localhost:3001

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/volume

# Auth & Security
JWT_SECRET=change_me_use_long_random
ENCRYPTION_KEY=base64-32-bytes-key==

# Discord Bot Configuration
DISCORD_TOKEN=
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
GUILD_ID=

# Spotify Integration
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
SPOTIFY_REDIRECT_URI=http://localhost:3000/auth/spotify/callback

# Solana/Helius Blockchain
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
HELIUS_API_KEY=
HELIUS_RPC_URL=
HELIUS_WEBHOOK_URL=
HELIUS_WEBHOOK_SECRET=

# Admin Configuration
SUPER_ADMIN_IDS=123,456

# Logging Configuration
LOG_LEVEL=debug

# Sentry Error Monitoring (Bot)
# Get your DSN from: https://sentry.io/settings/projects/your-project/keys/
SENTRY_DSN=https://your-dsn@sentry.io/project-id
SENTRY_ORG=your-org-name
SENTRY_PROJECT=your-project-name
SENTRY_AUTH_TOKEN=your-auth-token

# Production Services (Optional)
REDIS_URL=redis://localhost:6379

