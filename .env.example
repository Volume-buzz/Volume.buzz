# Database (Required for both Bot & Dashboard)
DATABASE_URL="postgresql://user:password@localhost:5432/volume"

# Discord (Required for both Bot & Dashboard)
DISCORD_TOKEN=your_discord_bot_token
DISCORD_CLIENT_ID=your_discord_client_id  
DISCORD_CLIENT_SECRET=your_discord_client_secret

# Spotify API (Required for both Bot & Dashboard)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=https://volume.buzz/auth/spotify/callback

# OAuth URLs
OAUTH_CALLBACK_URL=https://volume.buzz/auth/spotify/callback
DOMAIN=volume.buzz

# Encryption & Security (Required for Bot)
ENCRYPTION_KEY=your_32_byte_encryption_key_base64
JWT_SECRET=your_jwt_secret_key

# Admin Configuration (Required for Bot)
SUPER_ADMIN_IDS=your_discord_id_here

# API Configuration
PORT=4003
NODE_ENV=development

# Solana Network (Optional - defaults to mainnet)
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com

# Helius API (Required for advanced Solana features)
HELIUS_API_KEY=your_helius_api_key
HELIUS_RPC_URL=https://devnet.helius-rpc.com

# Rate Limiting (Optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging (Optional)
LOG_LEVEL=info

# Default Raid Settings (Optional)
DEFAULT_RAID_DURATION=60
MINIMUM_LISTEN_TIME=60